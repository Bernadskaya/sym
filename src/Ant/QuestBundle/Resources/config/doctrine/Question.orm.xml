<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Ant\QuestBundle\Entity\Question">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="title" type="string" column="Title" length="255"/>
        <field name="description" type="string" column="Description" length="255" nullable="true"/>

        <field name="enabled" type="boolean" column="Enabled" nullable="true"  />
        <one-to-many field="variants" target-entity="Variant" mapped-by="idQuestion" orphan-removal="true">
            <cascade><cascade-persist/></cascade>
        </one-to-many>
        <one-to-many target-entity="Answer" mapped-by="question" field="answers">
            <cascade><cascade-persist/></cascade>
        </one-to-many>
        <many-to-one field="type" target-entity="Type" inversed-by="question">
            <cascade><cascade-all/></cascade>
        </many-to-one>

    </entity>
</doctrine-mapping>
